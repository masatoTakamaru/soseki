<%= provide :title, t("title.student.expired") %>

<div class="container">

<h2><%= t("title.student.expired") %></h2>

<div class="flex justify-between items-center">
  <p><%= "#{t(".students_amount")} : #{@stus_count} äºº" %></p>
  <%= link_to t(".back_to_index"), student_index_path,
        class: "btn btn-cancel py-2 px-8" %>
</div>

<div class="table-frame mt-4 mb-20 bg-white">
<table class="w-full my-4">
<thead>
<tr class="text-85 dotted-bottom">
  <th><%= t("student.class_name") %></th>
  <th><%= t("student.name") %></th>
  <th><%= t("student.kana") %></th>
  <th><%= t("student.gender") %></th>
  <th><%= t("student.grade") %></th>
  <th><%= t("student.school_belong_to") %></th>
  <th><%= t("student.phone1") %></th>
  <th><%= t("student.phone1_belong_to") %></th>
  <th class="pr-2"><%= t("student.expire_date") %></th>
</tr>
</thead>
<tbody>
<% if @stus_count == 0 %>
  <tr>
    <td colspan="11">
      <div class="flex justify-center my-4">
        <div class="form-box py-2 px-8">
          <p class="text-center"><%= t(".students_empty") %></p>
        </div>
      </div>
    </td>
  </tr>
<% else %>
  <% @stus.each do |stu| %>
    <tr class="dotted-bottom">
      <td class="px-2"><%= stu[:class_name] %></td>
      <td class="font-bold underline pr-2">
        <%= link_to "#{stu[:family_name]} #{stu[:given_name]}",
              student_path(id: stu.hashid),
              class: "text-blue-500" %>
      </td>
      <td class="pr-2">
        <%= "#{stu[:family_name_kana]} #{stu[:given_name_kana]}" %>
      </td>
      <td class="pr-2"><%= stu[:gender] %></td>
      <td class="pr-2"><%= @grade_name[stu[:grade]] %></td>
      <td class="pr-2"><%= stu[:school_belong_to] %></td>
      <td class="pr-2"><%= stu[:phone1] %></td>
      <td class="pr-2"><%= stu[:phone1_belong_to] %> </td>
      <td class="pr-2"><%= stu[:expire_date] %> </td>
    </tr>
  <% end %>
<% end %>
</tbody>
</table>

<%= paginate @stus %>

</div>

</div>
