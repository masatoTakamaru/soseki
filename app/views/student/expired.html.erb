<%= provide :title, t("title.student.expired") %>

<div class="container">

<h2><%= t("title.student.expired") %></h2>

<div class="flex justify-between items-center">
  <p><%= t(".students_amount") %>:<%= @students_count %>äºº</p>
  <%= link_to t(".back_to_index"), student_index_path, class: "btn btn-cancel py-2 px-8" %>
</div>

<div class="table-frame mt-4 mb-20 bg-white">
<table class="w-full my-4">
<thead>
<tr class="text-85">
  <th><%= t("student.class_name") %></th>
  <th><%= t("student.name") %></th>
  <th><%= t("student.kana") %></th>
  <th><%= t("student.gender") %></th>
  <th><%= t("student.grade") %></th>
  <th><%= t("student.school_belong_to") %></th>
  <th><%= t("student.phone1") %></th>
  <th><%= t("student.phone1_belong_to") %></th>
  <th class="pr-2"><%= t("student.expire_date") %></th>
  <th></th>
</tr>
</thead>
<tbody>
<% if @students_count == 0 %>
  <tr>
    <td colspan="11">
      <div class="flex justify-center my-4">
        <div class="form-box py-2 px-8">
          <p class="text-center"><%= t(".students_empty") %></p>
        </div>
      </div>
    </td>
  </tr>
<% else %>
  <% @students.each do |student| %>
    <tr>
      <td class="px-2"><%= student.class_name %></td>
      <td class="font-bold underline pr-2">
        <%= link_to student.family_name + " " + student.given_name, student_path(id: student.hashid), class: "text-blue-500" %>
      </td>
      <td class="pr-2"><%= student.family_name_kana + " " + student.given_name_kana %></td>
      <td class="pr-2"><%= student.gender %></td>
      <td class="pr-2"><%= @grade_name[student.grade] %></td>
      <td class="pr-2"><%= student.school_belong_to %></td>
      <td class="pr-2"><%= student.phone1 %></td>
      <td class="pr-2"><%= student.phone1_belong_to %> </td>
      <td class="pr-2"><%= student.expire_date %> </td>
      <td class="pr-2">
        <%= link_to t(".delete"), student_path(student.hashid),
              class:"btn btn-cancel py-2 px-4",
              data: {confirm: t("student.show.delete_confirmation")}, method: :delete %>
      </td>
    </tr>
  <% end %>
<% end %>
</tbody>
</table>

<%= paginate @students %>

</div>

</div>
